<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cmsc355.curry_crackers_cats.booktrade.EtPostActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit Post"
        android:id="@+id/EditPostText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTitle"
        android:layout_below="@+id/EditPostText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="116dp"
        android:layout_alignParentEnd="true"
        android:hint="Title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etISBN"
        android:layout_below="@+id/etTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="ISBN" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPrice"
        android:layout_below="@+id/etISBN"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Price" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDescription"
        android:layout_below="@+id/etPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Description" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etCondition"
        android:layout_below="@+id/etDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Condition" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/bSave"
        android:layout_below="@+id/etCondition"
        android:layout_toStartOf="@+id/EditPostText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sold"
        android:id="@+id/bSold"
        android:layout_below="@+id/etCondition"
        android:layout_toEndOf="@+id/EditPostText" />
</RelativeLayout>
